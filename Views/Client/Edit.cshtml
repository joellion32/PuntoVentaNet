


@{
    ViewBag.Title = "Editar Cliente";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">@ViewBag.Title</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">@ViewBag.Title</a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>


<section class="content">
    <div class="container-fluid">
        <form method="POST" action="/Client/Update/@ViewBag.IdCliente">
            <div class="form-group">
                <label for="exampleInputEmail1">Nombre</label>
                <input type="text" class="form-control" name="nombre" aria-describedby="emailHelp" value="@ViewBag.Nombre">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input type="email" class="form-control" name="email" aria-describedby="emailHelp" value="@ViewBag.Email">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Telefono</label>
                <input type="text" class="form-control" name="telefono" aria-describedby="emailHelp" value="@ViewBag.Telefono">
            </div>


            <div class="form-group">
                <label for="exampleInputEmail1">Direccion</label>
                <input type="text" class="form-control" name="direccion" aria-describedby="emailHelp" value="@ViewBag.Direccion">
            </div>

            <button type="submit" class="btn btn-primary">Actualizar cliente</button>
        </form>
    </div>
</section>

