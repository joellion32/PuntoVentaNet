
@{
	ViewBag.Title = "Productos";
}

<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0 text-dark">Productos</h1>
			</div><!-- /.col -->
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="#">@ViewBag.Title</a></li>
				</ol>
			</div><!-- /.col -->
		</div><!-- /.row -->
	</div><!-- /.container-fluid -->
</div>


<section class="content">
	<div class="container-fluid">
		<!--Tabla de productos-->
		<div class="row">
			<div class="col-md-12 float-right">
				<a href="/Product/Create" class="btn btn-primary float-right">Crear Producto</a>
			</div><!-- /.col -->

			<div class="col-md-12">
				<table id="example" class="table table-striped table-bordered" style="width:100%">
					<thead>
						<tr>
							<th>Id Producto</th>
							<th>Nombre Producto</th>
							<th>Costo</th>
							<th>Precio</th>
							<th>Fecha</th>
							<th>Acciones</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var producto in Model)
						{
						<tr>
							<td>@producto.IdProducto</td>
							<td>@producto.NombreProducto</td>
							<td>RD$ @producto.Costo</td>
							<td>RD$ @producto.Precio</td>
							<td>@producto.Fecha</td>
							<td>
								<a class="btn btn-success" href="/Product/Edit/@producto.IdProducto">
									Editar
								</a>

								<a class="btn btn-danger" href="/Product/Delete/@producto.IdProducto">
									Eliminar
								</a>
							</td>
						</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>

