
@{
    ViewBag.Title = "Editar Producto";
}

<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0 text-dark">@ViewBag.Title</h1>
			</div><!-- /.col -->
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="#">@ViewBag.Title</a></li>
				</ol>
			</div><!-- /.col -->
		</div><!-- /.row -->
	</div><!-- /.container-fluid -->
</div>


<section class="content">
	<div class="container-fluid">
		<form>
			<div class="form-group">
				<label for="exampleInputEmail1">Nombre del producto</label>
				<input type="text" class="form-control" name="nombre" aria-describedby="emailHelp" value="@ViewBag.Nombre">
			</div>

			<div class="form-group">
				<label for="exampleInputEmail1">Costo</label>
				<input type="number" class="form-control" name="costo" aria-describedby="emailHelp" value="@ViewBag.Costo">
			</div>

			<div class="form-group">
				<label for="exampleInputEmail1">Precio</label>
				<input type="number" class="form-control" name="precio" aria-describedby="emailHelp" value="@ViewBag.Precio">
			</div>


			<div class="form-group">
				<label for="exampleInputEmail1">Fecha</label>
				<input type="date" class="form-control" name="fecha" aria-describedby="emailHelp" value="@ViewBag.Fecha">
			</div>

			<button type="submit" class="btn btn-primary">Editar</button>
		</form>
	</div>
</section>

